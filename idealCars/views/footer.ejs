<!-- Scripts de Bootstrap (deben ir antes de cerrar </body>) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<footer class="footer mt-auto py-3 bg-body-tertiary">
  <div class="container">
    <div class="d-flex justify-content-center align-items-center">
      <p class="mb-0" style="color:#fff;">&copy; <%= new Date().getFullYear() %></p>
      <h4 class="ms-2 mb-0" style="color:#fff;"><%= appName %></h4>
      <p class="mb-0 ms-2" style="color:#fff;"> <%= __('footer.rights') %></p>
    </div>
  </div>
  <script>
    function toggleFilters() {
        const filterForm = document.getElementById('filter-form');
        if (filterForm && filterForm.style.display === 'none') {
            filterForm.style.display = 'block';
        } else if (filterForm) {
            filterForm.style.display = 'none';
        }
    }
  </script>
</footer>
</body>
</html>