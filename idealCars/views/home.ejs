<%-include("header.ejs") %>
<div class="splash-container">
    <div class="logo-container">
        <div class="logo-text">idealCars</div>
        <div class="logo-tagline">Tu coche ideal te espera</div>
    </div>
</div>

<style>
    .splash-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
        transition: opacity 0.5s ease-out;
    }
    
    .logo-container {
        text-align: center;
        opacity: 0;
        transform: scale(0.5);
    }
    
    .logo-text {
        font-size: 4rem;
        font-weight: bold;
        color: #0066cc;
        margin-bottom: 0.5rem;
        font-family: Arial, sans-serif;
    }
    
    .logo-tagline {
        font-size: 1.5rem;
        color: #555;
        font-family: Arial, sans-serif;
    }
    
    /* Animaciones */
    .fade-in {
        animation: fadeIn 1s ease-in forwards;
    }
    
    .zoom-in {
        animation: zoomIn 1.2s ease-out forwards;
    }
    
    .pulse {
        animation: pulse 0.8s ease-in-out forwards;
    }
    
    .fade-out {
        animation: fadeOut 0.8s ease-out forwards;
    }
    
    @keyframes fadeIn {
        0% { opacity: 0; }
        100% { opacity: 1; }
    }
    
    @keyframes zoomIn {
        0% { 
            opacity: 0;
            transform: scale(0.5);
        }
        100% { 
            opacity: 1;
            transform: scale(1);
        }
    }
    
    @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
    
    @keyframes fadeOut {
        0% { opacity: 1; }
        100% { 
            opacity: 0;
            visibility: hidden;
        }
    }
</style>
<main class="main-bg-container container py-5" style="min-height: 70vh;">
    <h3 class="mb-3" style="font-size:1.5rem; font-weight:600;">ðŸš— <%= __('home.welcome') %> <% if(session.userName) { %>ðŸ«‚ <%= session.userName %><% } %></h3>

    <% if(session.userId) { %>
        <h2 class="mb-3"><%= __('home.userProducts') %></h2>
        <button onclick="toggleFilters()">Filtros</button>
        <div id="filter-form" style="display: none;">
            <form action="/" method="GET">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" placeholder="Nombre del producto">
                
                <label for="model">Modelo:</label>
                <input type="text" id="model" name="model" placeholder="Modelo del producto">
                
                <label for="color">Color:</label>
                <input type="text" id="color" name="color" placeholder="Color del producto">
                
                <label for="year">AÃ±o:</label>
                <input type="number" id="year" name="year" placeholder="AÃ±o del producto">
                
                <label for="price">Precio:</label>
                <input type="number" id="price" name="price" placeholder="Precio del producto">
                
                <label for="kilometer">Kilometraje:</label>
                <input type="number" id="kilometer" name="kilometer" placeholder="Kilometraje del producto">
                
                <button type="submit">Aplicar Filtros</button>
            </form>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 cards-container">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col">
                        <div class="ProductCard h-100">
                            <% if (product.image) { %>
                                <img src="/imagenes/<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                            <% } else { %>
                                <img src="https://placehold.co/600x400?text=<%= product.name %>" class="card-img-top" alt="<%= product.name %>">
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= product.name %> - <%= product.model %></h5>
                                <p class="card-text mb-1"><%= __('home.product.color') %>: <%= product.color %></p>
                                <p class="card-text mb-1"><%= __('home.product.year') %>: <%= product.year %></p>
                                <p class="card-text mb-1"><%= __('home.product.price') %>: <%= typeof product.price !== 'undefined' ? product.price.toLocaleString('es-ES', { style: 'currency', currency: 'EUR' }) : '' %></p>
                                <p class="card-text mb-3"><%= __('home.product.kilometer') %>: <%= typeof product.kilometer !== 'undefined' ? product.kilometer.toLocaleString('es-ES') : '' %> km</p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <p class="text-center text-muted"><%= __('home.noProducts') %></p>
                </div>
            <% } %>
        </div>
        <% if (count > limit) { %>
            <nav aria-label="Page navigation" class="d-flex justify-content-center">
                <ul class="pagination">
                    <% if (skip > 0) { %>
                        <li class="page-item"><a class="page-link" href="?skip=<%= Math.max(0, skip - limit) %>&limit=<%= limit %>&sort=<%= sort %>">Anterior</a></li>
                    <% } else { %>
                        <li class="page-item disabled"><span class="page-link">Anterior</span></li>
                    <% } %>
                    <% const totalPages = Math.ceil(count / limit); %>
                    <% const currentPage = Math.floor(skip / limit) + 1; %>
                    <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="?skip=<%= (i - 1) * limit %>&limit=<%= limit %>&sort=<%= sort %>"><%= i %></a>
                        </li>
                    <% } %>
                    <% if (skip + limit < count) { %>
                        <li class="page-item"><a class="page-link" href="?skip=<%= skip + limit %>&limit=<%= limit %>&sort=<%= sort %>">Siguiente</a></li>
                    <% } else { %>
                        <li class="page-item disabled"><span class="page-link">Siguiente</span></li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    <% } else { %>
        <div class="alert alert-info" role="alert">
            <%= __('home.loginPrompt') %>
        </div>
        <div class="text-center mt-5">
            <img src="/images/welcome_guest.svg" alt="" style="max-width: 400px; opacity: 0.8;">
        </div>
        <div style="height:50vh"></div>
    <% } %>
</main>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const splashContainer = document.querySelector('.splash-container');
        const logoContainer = document.querySelector('.logo-container');
        
        // Secuencia de animaciÃ³n
        setTimeout(function() {
            logoContainer.classList.add('zoom-in');
        }, 500);
        
        setTimeout(function() {
            logoContainer.classList.add('pulse');
        }, 2000);
        
        setTimeout(function() {
            splashContainer.classList.add('fade-out');
        }, 3000);
        
        setTimeout(function() {
            splashContainer.style.display = 'none';
        }, 3800);
    });
    
    function toggleFilters() {
        const filterForm = document.getElementById('filter-form');
        if (filterForm.style.display === 'none') {
            filterForm.style.display = 'block';
        } else {
            filterForm.style.display = 'none';
        }
    }
</script>
