<%- include("header.ejs") %>
<!-- Splash animado -->
<link rel="stylesheet" href="/css/splash.css">
<div class="splash-container">
    <div class="logo-container">
        <div class="logo-text">idealCars</div>
        <div class="logo-tagline">Tu coche ideal te espera</div>
    </div>
</div>
<main class="main-bg-container container py-3">
    <h3 class="mb-2" style="font-size:1.5rem; font-weight:600;">游뚱 <%= __('home.welcome') %> <% if(session.userName) { %>游쁵 <%= session.userName %><% } %></h3>
    <% if (!session.userId) { %>
        <div class="alert alert-info mb-2" role="alert">
            <%= __('home.loginPrompt') %>
        </div>
    <% } %>
    <h2 class="mb-2"><%= __('home.userProducts') %></h2>
    <button onclick="toggleFilters()">Filtros</button>
    <div id="filter-form" style="display: none;">
        <form action="/" method="GET">
            <label for="name">Nombre:</label>
            <input type="text" id="name" name="name" placeholder="Nombre del producto">
            <label for="model">Modelo:</label>
            <input type="text" id="model" name="model" placeholder="Modelo del producto">
            <label for="color">Color:</label>
            <input type="text" id="color" name="color" placeholder="Color del producto">
            <label for="year">A침o:</label>
            <input type="number" id="year" name="year" placeholder="A침o del producto">
            <label for="price">Precio:</label>
            <input type="number" id="price" name="price" placeholder="Precio del producto">
            <label for="kilometer">Kilometraje:</label>
            <input type="number" id="kilometer" name="kilometer" placeholder="Kilometraje del producto">
            <button type="submit">Aplicar Filtros</button>
        </form>
    </div>
    <hr class="my-2">
    <!-- Resto del contenido... -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 cards-container">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col">
                    <div class="ProductCard h-100">
                        <% if (product.images && product.images.length > 0) { %>
                            <img src="/imagenes/<%= product.images[0] %>" class="card-img-top" alt="<%= product.name %>">
                        <% } else { %>
                            <img src="https://placehold.co/600x400?text=<%= product.name %>" class="card-img-top" alt="<%= product.name %>">
                        <% } %>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= product.name %> - <%= product.model %></h5>
                            <p class="card-text mb-1"><%= __('home.product.color') %>: <%= product.color %></p>
                            <p class="card-text mb-1"><%= __('home.product.year') %>: <%= product.year %></p>
                            <p class="card-text mb-1"><%= __('home.product.price') %>: <%= typeof product.price !== 'undefined' ? product.price.toLocaleString('es-ES', { style: 'currency', currency: 'EUR' }) : '' %></p>
                            <p class="card-text mb-2"><%= __('home.product.kilometer') %>: <%= typeof product.kilometer !== 'undefined' ? product.kilometer.toLocaleString('es-ES') : '' %> km</p>
                        </div>
                        <a href="/products/detail/<%= product.id%>" class="btn btn-primary mt-auto">Detalles</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <p class="text-center text-muted"><%= __('home.noProducts') %></p>
            </div>
        <% } %>
    </div>
    <% if (count > limit) { %>
        <nav aria-label="Page navigation" class="d-flex justify-content-center mt-3 mb-2">
            <ul class="pagination pagination-sm">
                <% if (skip > 0) { %>
                    <li class="page-item"><a class="page-link" href="?skip=<%= Math.max(0, skip - limit) %>&limit=<%= limit %>&sort=<%= sort %>">Anterior</a></li>
                <% } else { %>
                    <li class="page-item disabled"><span class="page-link">Anterior</span></li>
                <% } %>
                <% const totalPages = Math.ceil(count / limit); %>
                <% const currentPage = Math.floor(skip / limit) + 1; %>
                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="?skip=<%= (i - 1) * limit %>&limit=<%= limit %>&sort=<%= sort %>"><%= i %></a>
                    </li>
                <% } %>
                <% if (skip + limit < count) { %>
                    <li class="page-item"><a class="page-link" href="?skip=<%= skip + limit %>&limit=<%= limit %>&sort=<%= sort %>">Siguiente</a></li>
                <% } else { %>
                    <li class="page-item disabled"><span class="page-link">Siguiente</span></li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</main>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Verificar si es una carga directa o navegaci칩n con par치metros
        const urlParams = new URLSearchParams(window.location.search);
        const isDirectLoad = !urlParams.has('skip') && !urlParams.has('limit') && !urlParams.has('sort') && 
                            !urlParams.has('name') && !urlParams.has('model') && !urlParams.has('color') &&
                            !urlParams.has('year') && !urlParams.has('price') && !urlParams.has('kilometer');
        
        // Comprobar si ya se mostr칩 el splash en esta sesi칩n
        const splashShown = localStorage.getItem('splashShown');
        
        // Mostrar splash solo si es carga directa Y no se ha mostrado antes
        if (isDirectLoad && !splashShown) {
            // Guardar en localStorage que se mostr칩 el splash
            localStorage.setItem('splashShown', 'true');
            
            // Agregar clase para ocultar el contenido mientras se muestra el splash
            document.body.classList.add('splash-active');
            
            // Referencias a elementos del splash
            const splashContainer = document.querySelector('.splash-container');
            const logoContainer = document.querySelector('.logo-container');
            
            if (splashContainer && logoContainer) {
                // Iniciar animaci칩n de zoom
                setTimeout(function() {
                    logoContainer.classList.add('zoom-in');
                }, 200);
                
                // Efecto de pulso m치s r치pido
                setTimeout(function() {
                    logoContainer.classList.add('pulse');
                }, 1600);
                
                // Iniciar desvanecimiento m치s r치pido
                setTimeout(function() {
                    splashContainer.classList.add('fade-out');
                }, 2200);
                
                // Ocultar splash y mostrar el contenido m치s r치pido
                setTimeout(function() {
                    splashContainer.style.display = 'none';
                    document.body.classList.remove('splash-active');
                }, 2500);
            }
        } else {
            // Si no es carga directa o ya se mostr칩, ocultar el splash inmediatamente
            const splashContainer = document.querySelector('.splash-container');
            if (splashContainer) {
                splashContainer.style.display = 'none';
            }
            document.body.classList.remove('splash-active');
        }
    });
    
    function toggleFilters() {
        const filterForm = document.getElementById('filter-form');
        if (filterForm.style.display === 'none') {
            filterForm.style.display = 'block';
        } else {
            filterForm.style.display = 'none';
        }
    }
</script>
<%-include("footer.ejs") %>
