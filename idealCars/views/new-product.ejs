<style>
  .main-bg-container {
    padding: 2rem;
    min-height: 100vh;
    background-color: #f5f5f8;
  }
  
  .FormCard {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
    border-top: 4px solid #00bfff;
  }
  
  .FormCard h1 {
    color: #00bfff;
    font-weight: 600;
    margin-bottom: 1.5rem;
    position: relative;
  }
  
  .FormCard h1:after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: #00bfff;
    border-radius: 3px;
  }
  
  .form_input {
    position: relative;
    margin-bottom: 1.5rem !important;
  }
  
  .form_input label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #000000;
    transition: all 0.3s ease;
  }
  
  .input {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 1rem;
    transition: all 0.3s ease;
  }
  
  .input:focus {
    border-color: #00bfff; 
    box-shadow: 0 0 0 3px rgba(0, 191, 255, 0.15);
    outline: none;
  }
  
  .input:focus + label {
    color: #00bfff;
  }
  
  .form_action button {
    background-color: #00bfff;
    color: white;
    border: none;
    padding: 0.8rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .form_action button:hover {
    background-color: #00a6dd;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 191, 255, 0.2);
  }
  
  /* Efecto de animación para los campos */
  .form_input .input {
    transform: translateY(0);
    opacity: 1;
    animation: fadeInUp 0.5s ease-out;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Aplicar la animación con retraso para cada campo */
  .form_input:nth-child(1) .input { animation-delay: 0.1s; }
  .form_input:nth-child(2) .input { animation-delay: 0.2s; }
  .form_input:nth-child(3) .input { animation-delay: 0.3s; }
  .form_input:nth-child(4) .input { animation-delay: 0.4s; }
  .form_input:nth-child(5) .input { animation-delay: 0.5s; }
  .form_input:nth-child(6) .input { animation-delay: 0.6s; }
  .form_input:nth-child(7) .input { animation-delay: 0.7s; }

  /* Efecto para el botón */
  .form_action button {
    animation: fadeInUp 0.8s ease-out;
    animation-delay: 0.8s;
    opacity: 1;
  }
  /* Elemento decorativo */
  .FormCard::before {
    content: '';
    position: absolute;
    top: -50px;
    right: -50px;
    width: 100px;
    height: 100px;
    background: #00bfff;
    opacity: 0.1;
    border-radius: 50%;
    animation: pulse 4s infinite;
  }
  @keyframes pulse {
    0% { transform: scale(1); opacity: 0.1; }
    50% { transform: scale(1.5); opacity: 0.15; }
    100% { transform: scale(1); opacity: 0.1; }
  }
  /* Mejora para inputs tipo archivo */
  input[type="file"] {
    padding: 0.5rem;
    background-color: #f8f9fa;
    border: 1px dashed #ccc;
  }
  
  input[type="file"]:hover {
    background-color: #f0f0f0;
    border-color: #00bfff;
  }
  
  /* Mejora para mensajes de validación */
  .input:invalid:focus {
    border-color: #ff6b6b;
    box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.15);
  }
  
  /* Animación adicional para el formulario */
  .FormCard {
    animation: slideIn 0.7s ease-out forwards;
  }
  
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .form_action button {
    letter-spacing: 0.5px;
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
  }
</style>
