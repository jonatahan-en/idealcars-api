<%- include("header.ejs") %>
<main class="main-bg-container container py-5 d-flex flex-column align-items-center justify-content-center" style="min-height: 0;">
    <section class="FormCard w-100" style="max-width: 500px;">
        <h1 class="text-center mb-4"><%= __('signout.title') %></h1>
        <form action="/signout" method="post">
            <div class="mb-3">
                <label for="email" class="form-label"><%= __('signout.email') %></label>
                <input type="email" class="form-control input" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label"><%= __('signout.password') %></label>
                <input type="password" class="form-control input" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3"><%= __('signout.unregister') %></button>
        </form>
    </section>
</main>
<%- include("footer.ejs") %>