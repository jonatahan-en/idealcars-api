<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= __('appName') %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles.css">
    <meta name="description" content="<%= __('appDescription') %>">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
</head>
   <nav class="navbar navbar-expand-lg bg-body-tertiary sticky-top shadow-sm">
    <div class="container-fluid">
           <a class="navbar-brand fw-bold" href="/"> <%= __('appName') %> </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-2">
                <li class="nav-item">
                        <a class="btn btn-primary" href="/"> <i class="bi bi-house-door"></i> <%= __('navigation.home') %></a>
                </li>
                <li class="nav-item">
                       <a class="btn btn-primary" href="/products/new"> <i class="bi bi-plus-circle"></i> <%= __('navigation.newAd') %></a>
                </li>
            </ul>
               <form class="d-flex gap-2" role="search">
                <% if(session.userId) {%>
                       <a href="/myproducts" class="btn btn-outline-info" type="button"> <i class="bi bi-box-seam"></i> <%= __('navigation.myProducts') %></a>
                    <a href="/logout" class="btn btn-outline-success" type="button"> <i class="bi bi-box-arrow-right"></i> <%= __('navigation.logout') %></a>
                    <a href="/signout" class="btn btn-outline-danger" type="button"> <i class="bi bi-person-x"></i> <%= __('navigation.signout') %></a>
                <% }else{ %>
                       <a href="/login" class="btn btn-outline-success" type="button"> <i class="bi bi-box-arrow-in-right"></i> <%= __('navigation.login') %></a>
                    <a href="/signup" class="btn btn-outline-primary" type="button"> <i class="bi bi-person-plus"></i> <%= __('navigation.signup') %></a>
                <% } %>
            </form>
               <div class="dropdown ms-3">
                <button class="btn btn-outline-secondary dropdown-toggle d-flex align-items-center" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="/flags/<%= currentLocale === 'en' ? 'en' : currentLocale === 'es' ? 'es' : currentLocale === 'pt' ? 'prt' : 'en' %>.png" alt="<%= currentLocale %>" width="20" height="15" class="me-2">
                    <span class="fw-bold text-capitalize">
                        <%= currentLocale === 'en' ? 'English' : currentLocale === 'es' ? 'Español' : currentLocale === 'pt' ? 'Português' : currentLocale %>
                    </span>
                    <i class="bi bi-caret-down-fill ms-1"></i>
                </button>
                <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                    <% if (currentLocale !== 'en') { %>
                        <li><a class="dropdown-item d-flex align-items-center" href="?lang=en">
                            <img src="/flags/en.png" alt="English" width="20" height="15" class="me-2"> English
                        </a></li>
                    <% } %>
                    <% if (currentLocale !== 'es') { %>
                        <li><a class="dropdown-item d-flex align-items-center" href="?lang=es">
                            <img src="/flags/es.png" alt="Español" width="20" height="15" class="me-2"> Español
                        </a></li>
                    <% } %>
                    <% if (currentLocale !== 'pt') { %>
                        <li><a class="dropdown-item d-flex align-items-center" href="?lang=pt">
                            <img src="/flags/prt.png" alt="Português" width="20" height="15" class="me-2"> Português
                        </a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</nav>